local HttpService = game:GetService("HttpService")

-- Your Firebase Realtime Database URL (replace with your own!)
local FirebaseURL = "https://your-firebase-project.firebaseio.com/usersCount.json"

local function getUserCount()
    local success, response = pcall(function()
        return HttpService:GetAsync(FirebaseURL)
    end)
    if success then
        local count = tonumber(response)
        return count or 0
    else
        return 0
    end
end

local TabReadMe = Window:CreateTab("Read Me ğŸ“œ", 6034509995)

TabReadMe:CreateLabel("Hub Created by: Solin")
TabReadMe:CreateLabel("Thanks for using my hub â¤ï¸")

TabReadMe:CreateButton({
    Name = "Copy Discord Link ğŸ“‹",
    Callback = function()
        setclipboard("https://discord.gg/97mkbSWwmQ")
        Rayfield:Notify({
            Title = "Copied!",
            Content = "Discord link copied to clipboard âœ”ï¸",
            Duration = 5
        })
    end
})

local function incrementUserCount()
    local currentCount = getUserCount()
    local newCount = currentCount + 1
    pcall(function()
        HttpService:PutAsync(FirebaseURL, tostring(newCount))
    end)
    return newCount
end

